{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Trident",
  "scopeName": "source.trident",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#constants" },
    { "include": "#numbers" },
    { "include": "#functions" },
    { "include": "#attributes" },
    { "include": "#operators" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.trident",
          "match": "//.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.trident",
          "match": "\\b(if|else|for|in|bounded|return|match|asm)\\b"
        },
        {
          "name": "keyword.declaration.trident",
          "match": "\\b(program|module|use|fn|pub|sec|let|mut|const|struct|event|emit|seal)\\b"
        },
        {
          "name": "constant.language.boolean.trident",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.primitive.trident",
          "match": "\\b(Field|XField|Bool|U32|Digest)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.numeric.integer.trident",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.integer.trident",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.trident",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "entity.name.function.trident" }
          }
        }
      ]
    },
    "attributes": {
      "patterns": [
        {
          "name": "meta.attribute.trident",
          "match": "#\\[([a-zA-Z_][a-zA-Z0-9_]*(?:\\([^)]*\\))?)\\]",
          "captures": {
            "1": {
              "name": "entity.other.attribute-name.trident"
            }
          }
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.trident",
          "match": "(=>|\\*\\.|/%|==|->|\\.\\.|[+*<&^=])"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.bracket.trident",
          "match": "[{}()\\[\\]]"
        },
        {
          "name": "punctuation.delimiter.trident",
          "match": "[,;:]"
        },
        {
          "name": "punctuation.accessor.trident",
          "match": "\\."
        }
      ]
    }
  }
}
